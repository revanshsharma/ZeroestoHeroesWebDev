<script>
  const fill = document.querySelector(".progress-fill")
  let value = 0

  const timer = setInterval(() => {
    if (value >= 30) {
      clearInterval(timer)
    } else {
      value++
      fill.style.width = value + "%"
    }
  }, 20)
</script>


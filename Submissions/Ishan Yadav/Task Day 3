<script>
  function openModal(type) {
    const modal = document.getElementById("modal");
    const data = document.getElementById("modalData");

    modal.style.display = "flex";

    if (type === "learn") {
      data.innerHTML = `
        <h2>üß† Learn at ZeroTheory</h2>
        <ul>
          <li>Daily coding challenges</li>
          <li>Concept-driven learning paths</li>
          <li>From beginner to advanced</li>
        </ul>
      `;
    }

    if (type === "build") {
      data.innerHTML = `
        <h2>‚öôÔ∏è Build Real Projects</h2>
        <ul>
          <li>Mini apps & UI components</li>
          <li>Portfolio-ready projects</li>
          <li>Hands-on development</li>
        </ul>
      `;
    }

    if (type === "community") {
      data.innerHTML = `
        <h2>üåç Community</h2>
        <ul>
          <li>Share progress & feedback</li>
          <li>Learn together</li>
          <li>Grow as a team</li>
        </ul>
      `;
    }
  }

  function closeModal() {
    document.getElementById("modal").style.display = "none";
  }
</script>


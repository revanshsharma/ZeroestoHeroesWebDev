<script>
  const bar = document.querySelector(".fill")
  let width = 0

  const animate = setInterval(() => {
    if (width >= 30) {
      clearInterval(animate)
    } else {
      width++
      bar.style.width = width + "%"
    }
  }, 18)
</script>

